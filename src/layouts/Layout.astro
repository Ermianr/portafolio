---
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";
import { baseUrl } from "@/consts/urls";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
interface Props {
    pageTitle: string;
    description?: string;
}
const {
    pageTitle,
    description = "Este es un portafolio web que muestra proyectos, habilidades y experiencia profesional.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{pageTitle}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Kanit:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <meta name="description" content={description} />
        <meta name="author" content="Ermianr" />
        <meta name="theme-color" content="#0a0a0a" />
        <meta property="og:title" content={pageTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={baseUrl} />
        <meta name="twitter:card" content="summary_large_image" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <ClientRouter />
    </head>
    <body>
        <Navbar />
        <div class="main-container">
            <main class="px-6">
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>
